<%- include("./html", {title: "Nike Signup", navbar:"/CSS/navbar.css" ,signLink:"/CSS/sign_up.css",footer:"/CSS/footer.css"})%>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">


<div id="navbar_suraj"></div> <!--NAVBAR-->

<div id = "signup_box">
    <div>
        <img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fwww.iconsdb.com%2Ficons%2Fdownload%2Fblack%2Fnike-512.jpg&f=1&nofb=1" alt="">
    </div>
    <h3>BECOME A NIKE MEMBER</h3>
    <div>
        <p>Create your Nike Member profile and get first
            access to the very best of Nike products, inspiration
            and community.</p>
    </div>
    <script>
        let message = "<%=message%>"
        if(message != "[object Object]")
        {   
            alert(message)
        }
    </script>
    <div class = "form">
        <form action="/in/register" id ="signup_form" method="post" onsubmit="formSubmit">
            <input type="email" id = "email" placeholder="Email address" name="email" autofocus  required minlength="5" autocomplete="off">
            <kbd style="color: red;"><%=message?.email%></kbd>

            <i class="far fa-eye" id="togglePassword"></i>
            <input type="password" id = "password" placeholder="Password" name="password" required minlength="3" autocomplete="off">
            <kbd style="color: red;"> <%=message?.password%></kbd>

            <input type="text" id = "first" placeholder="First Name" name="firstname" required minlength="1" autocomplete="off"> 
            <kbd style="color: red;" ><%=message?.firstname%></kbd>

            <input type="text" id = "last" placeholder="Last Name" name="lastname" required minlength="1" autocomplete="off">
           <kbd style="color: red;" > <%=message?.lastname%></kbd>

            <input type="text" id = "birth" placeholder="Date of Birth" name="dob" onfocus="(this.type='date')" required>
            <label for="">Get Nike Member Reward every year on your Birthday.</label>
            <input type="text" id="country" value="India">
            <div class = "gender">
                <div id = "male">Male</div>
                <div id = "female">Female</div>
            </div>
            <div id = "tick_box">
                <div>
                    <input type="checkbox" name="" id="">
                    <p>Sign up fo emails to get updates from Nike on
                        products,offer and your Member benefits
                    </p>
                </div>
                <p>By Creating an account, you agree to Nike's <a href="https://agreementservice.svs.nike.com/rest/agreement?agreementType=privacyPolicy&country=IN&language=en&mobileStatus=false&requestType=redirect&uxId=com.nike.commerce.nikedotcom.web">Privacy Policy</a>
                    and 
                    <a href="https://agreementservice.svs.nike.com/rest/agreement?agreementType=termsOfUse&country=IN&language=en&mobileStatus=true&requestType=redirect&uxId=com.nike.commerce.nikedotcom.web">Terms of Use.</a></p>
            </div>
                <button id = "join_us">JOIN US</button>
            <p>Already a Member?<a href="/in/signin"> Sign In.</a></p>
        </form>
    </div>
</div>
<div id = "customise_footer"></div>  
</body>
</html>
<script src="/Javascript/signup.js"></script> 

<script type = "module">
    import {navbar,mobile} from "/Javascript/navbar_html.js"
    let navbar_html =  navbar()
    document.querySelector("#navbar_suraj").innerHTML = navbar_html
    mobile()

    import footer from "/Javascript/footer.js"
    let footer_html = footer()
    document.querySelector("#customise_footer").innerHTML = footer_html 

    const togglePassword = document.querySelector('#togglePassword');
  const password = document.querySelector('#password');
 
  togglePassword.addEventListener('click', function (e) {
    // toggle the type attribute
    const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
    password.setAttribute('type', type);
    // toggle the eye slash icon
    this.classList.toggle('fa-eye-slash');
});
</script>