<%- include("./html", {title: "Nike Signin",navbar:"/CSS/navbar.css", signLink:"/CSS/sign_in.css", footer:"/CSS/footer.css"})%>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css">

<div id="navbar_suraj"></div> <!--NAVBAR-->

<div id = "login_box">
    <div>
        <img src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fwww.iconsdb.com%2Ficons%2Fdownload%2Fblack%2Fnike-512.jpg&f=1&nofb=1" alt="">
    </div>
    <h3>YOUR ACCOUNT FOR EVERYTHING NIKE</h3>
    <script>
      let message = "<%=message%>"
        if(message != "[object Object]")
        {   
            alert(message)
        }
    </script>
    <form action="/in/signin"  method="post">
        <div id = "login_form">
            <input type="email" id = "email" placeholder="Email address" name="email" autocomplete="off">
            <input type="password" id = "password" placeholder="Password" name="password" autocomplete="off">
            <i class="far fa-eye" id="togglePassword"></i>
        </div>
        <div id = "tick_box">
            <input type="checkbox" name="" id="">
            <p>Keep me signed in</p>
        </div>
        <div id = "nike_terms">
            <p>By logging in, you agree to Nike's <a href="https://agreementservice.svs.nike.com/rest/agreement?agreementType=privacyPolicy&country=IN&language=en&mobileStatus=false&requestType=redirect&uxId=com.nike.commerce.nikedotcom.web">Privacy Policy</a>
                and 
                <a href="https://agreementservice.svs.nike.com/rest/agreement?agreementType=termsOfUse&country=IN&language=en&mobileStatus=true&requestType=redirect&uxId=com.nike.commerce.nikedotcom.web">Terms of Use.</a></p>
        </div>
        <button id = "sign_in" name="Submit">SIGN IN</button>
        <p>Not a Member?<a href="/in/register"> Join us.</a></p>
    </form>
</div>
<div id = "customise_footer"></div>  
</body>
</html>
<script type = "module">
    import {navbar,mobile} from "/Javascript/navbar_html.js"
    mobile()
    let navbar_html =  navbar()
    document.querySelector("#navbar_suraj").innerHTML = navbar_html


    import footer from "/Javascript/footer.js"
    let footer_html = footer()
    document.querySelector("#customise_footer").innerHTML = footer_html  

    const togglePassword = document.querySelector('#togglePassword');
    const password = document.querySelector('#password');
 
  togglePassword.addEventListener('click', function (e) {
    // toggle the type attribute
    const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
    password.setAttribute('type', type);
    // toggle the eye slash icon
    this.classList.toggle('fa-eye-slash');
});
</script>